<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    tools:context="com.example.user.mychat.LoginActivity">



    <include layout="@layout/app_bar_layout" android:id="@+id/page_login"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/page_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="111dp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:text="LOGIN"
        android:textColor="?android:attr/colorFocusedHighlight"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="500sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="86dp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:ems="10"
        android:hint="Registered Email"
        android:inputType="textPersonName"
        android:textColor="?android:attr/colorActivatedHighlight"
        android:textSize="30sp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="500sp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/email"
        android:layout_marginTop="65dp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="40dp"
        android:background="@android:color/holo_orange_dark"
        android:onClick="login"
        android:text="OK"
        android:textSize="30sp" />

</RelativeLayout>
